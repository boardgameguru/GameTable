<h1>Sign Up Now!</h1>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message|%>
        <p><%= message %></p>
    <% end %>
<% end %>

<%= form_for @user do |u| %>
    <div class="field">
        <%= u.label :first_name %>
        <%= u.text_field :first_name %>
    </div>
    <div class="field">
        <%= u.label :last_name %>
        <%= u.text_field :last_name %>
    </div>
    <div class="field">
        <%= u.label :email %>
        <%= u.email_field :email %>
    </div>
    <div class="field">
        <%= u.label :password %>
        <%= u.password_field :password %>
    </div>
    <div class="field">
        <%= u.label :password_confirmation %>
        <%= u.password_field :password_confirmation %>
    </div>
    <div class="field submit">
        <%= u.submit "Sign Up" %>
    </div>
<% end %>
<hr>
<h3>Already a member? <%= link_to "Log In Now", new_sessions_path %></h3>