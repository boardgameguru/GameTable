<h1>Sign Up Now!</h1>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message|%>
        <p><%= message %></p>
    <% end %>
<% end %>

<%= form_for @user do |u| %>
    <div class="form-group">
        <%= u.label :first_name %>
        <%= u.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :last_name %>
        <%= u.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :email %>
        <%= u.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :password %>
        <%= u.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :password_confirmation %>
        <%= u.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="field submit">
        <%= u.submit "Sign Up", class: "btn btn-primary" %>
    </div>
<% end %>
<hr>
<h3>Already a member? <%= link_to "Log In Now", new_sessions_path, class: "text-primary" %></h3>