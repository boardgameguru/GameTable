<h1>Edit Information for <%= @user.first_name %> <%= @user.last_name %> </h1>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message|%>
        <p><%= message %></p>
    <% end %>
<% end %>

<%= form_for @user, url: users_path,  html: {method: "patch"} do |u| %>
    <div class="form-group">
        <%= u.label :first_name %>
        <%= u.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :last_name %>
        <%= u.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :email %>
        <%= u.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :password %>
        <%= u.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :password_confirmation %>
        <%= u.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="submit">
        <%= u.submit "Update Information", class: "btn btn-primary" %>
    </div>
<% end %>