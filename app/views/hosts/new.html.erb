<h1>Register your buisness!</h1>

<% if @host.errors.any? %>
    <% @host.errors.full_messages.each do |message|%>
        <p><%= message %></p>
    <% end %>
<% end %>

<%= form_for @host do |u| %>
    <div class="form-group">
        <%= u.label :name %>
        <%= u.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :address %>
        <%= u.text_field :address, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :phone %>
        <%= u.telephone_field :phone, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :email %>
        <%= u.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :password %>
        <%= u.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= u.label :password_confirmation %>
        <%= u.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="submit">
        <%= u.submit "Register" %>
    </div>
<% end %>